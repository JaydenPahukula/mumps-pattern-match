{
	"name": "mumps-pattern-match",
	"main": "lib/index.js",
	"scripts": {
		"build": "npm run typecheck && npm run build:js",
		"typecheck": "tsc --noEmit ./src/**/*",
		"build:js": "esbuild src/index.ts --outfile=lib/index.js --platform=node --bundle"
	},
	"bin": {
		"hello-world-npm": "./bin.js"
	},
	"devDependencies": {
		"esbuild": "^0.25.10",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@syntropiq/libpcre-ts": "^1.3.1"
	}
}
